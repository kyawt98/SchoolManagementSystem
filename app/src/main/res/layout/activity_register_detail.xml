<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registration.RegisterDetailActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/etDateDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginTop="32dp"
                android:hint="Register Date"
                android:inputType="date"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="-35dp" />

            <TextView
                android:id="@+id/labelStudentInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Student Information"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etDateDetail" />


            <EditText
                android:id="@+id/etStudentNameDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:hint="Student Name"
                android:spinnerMode="dropdown"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/labelStudentInfo" />

            <RadioGroup
                android:id="@+id/radioGenderDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/etStudentNameDetail">

                <TextView
                    android:id="@+id/titleDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Female" />

                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="859dp"
                    android:layout_height="wrap_content"
                    android:text="Male" />

            </RadioGroup>

            <EditText
                android:id="@+id/etStudentNrcDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:hint="NRC No "
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/radioGenderDetail" />

            <EditText
                android:id="@+id/etStudentBirthdayDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:hint="Birthday "
                android:inputType="date"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/etStudentNrcDetail" />

            <TextView
                android:id="@+id/labelParentInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Parent Information"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.469"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etStudentBirthdayDetail" />

            <EditText
                android:id="@+id/etParentNameDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:hint="Father Name"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/labelParentInfo" />

            <EditText
                android:id="@+id/etParentNrcDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:hint="NRC No"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/etParentNameDetail" />

            <EditText
                android:id="@+id/etParentPhoneDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:hint="Phone No"
                android:inputType="number"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/etParentNrcDetail" />

            <TextView
                android:id="@+id/labelContactInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Contact Information"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etParentPhoneDetail" />

            <EditText
                android:id="@+id/etAddressDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:hint="Address"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/labelContactInfo" />

            <EditText
                android:id="@+id/etEmailDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:hint="Email"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/etAddressDetail" />

            <TextView
                android:id="@+id/labelCourseInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Course Information"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etEmailDetail" />

            <Spinner
                android:id="@+id/spinCourseDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:dropDownSelector="@color/colorAccent"
                android:outlineSpotShadowColor="@color/colorAccent"
                android:spinnerMode="dropdown"
                android:textSize="16dp"
                app:layout_constraintTop_toBottomOf="@id/labelCourseInfo" />


            <EditText
                android:id="@+id/etClassFeesDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:hint="Course Fees"
                android:inputType="number"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/spinCourseDetail" />


            <EditText
                android:id="@+id/etDurationDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:hint="Duration"
                android:inputType="number"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/etClassFeesDetail" />

            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="16dp"
                android:background="@drawable/btn_submit_background"
                android:text="Update"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/btnDelete"
                app:layout_constraintHorizontal_chainStyle="packed"
                tools:ignore="MissingConstraints"
                app:layout_constraintTop_toBottomOf="@id/etDurationDetail" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="16dp"
                android:background="@drawable/btn_delete_background"
                android:text="Delete"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                tools:ignore="MissingConstraints"
                app:layout_constraintLeft_toRightOf="@id/btnUpdate"
                app:layout_constraintRight_toLeftOf="@id/btnCancel"
                app:layout_constraintTop_toBottomOf="@id/etDurationDetail" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="16dp"
                android:background="@drawable/btn_cancel_background"
                android:text="Cancel"
                android:textColor="#FFFFFF"
                android:textAllCaps="true"
                android:textSize="14sp"
                app:layout_constraintLeft_toRightOf="@id/btnDelete"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etDurationDetail" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>